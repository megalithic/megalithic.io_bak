APP="megalithic"

BUILD_HOST="megalithic.io"
BUILD_USER="replicant"
BUILD_AT="/home/replicant/app_build"

PRODUCTION_HOSTS="megalithic.io"
PRODUCTION_USER="replicant"
DELIVER_TO="/home/replicant/app_release"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/replicant/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}
